F90          = ifort
F90LINKER    = ifort
#F90          = gfortran
#F90LINKER    = gfortran

# for IFORT-Compiler
#===================
DEFS      = -D IFORT -D CHECK_NAN -diag-disable 8290,8291 
#FFLAGS   = -r8 -g -traceback -fpe0 -check all,noarg_temp_created -warn all -fopenmp
FFLAGS    = -r8 -g -traceback -O3 -xHOST -prec-div -fp-model source -fopenmp
INCLUDES  = 
LFLAGS    = $(FFLAGS)

# for gfortran-Compiler
#======================
